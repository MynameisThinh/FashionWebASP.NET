@model ECommerceWebsite.Models.ApplicationUser 
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%
    }

    .row-item-news {
        margin-bottom: 20px
    }
    .form-group {
        width : 300%
    }
</style>
<div class="container news_section_container">
    <div class="row">
        @using (Html.BeginForm("PostProfile", "Account"))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
        <div class="col-md-12">
            <div class="form-group">
                <label for="exampleInputEmail">FullName</label>
                <input type="text" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" name="FullName" value="@Model.FullName" />
            </div>
            <div class="form-group">
                <label for="exampleInputEmail">UserName</label>
                <input type="text" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"  name="UserName" value="@Model.UserName" />
            </div>
            <div class="form-group">
                <label for="exampleInputEmail">Phone</label>
                <input type="text" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" name="Phone" value="@Model.Phone" />
            </div>
            <div class="form-group">
                <label for="exampleInputEmail">Email</label>
                <input type="text" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"  name="Email" value="@Model.Email" readonly />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Cập nhật</button>
            </div>
        </div>
        }

    </div>
</div>
